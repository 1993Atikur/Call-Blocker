<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="17dp" android:color="@android:color/transparent"/>
            <solid android:color="@android:color/holo_orange_light"/>
            <size android:width="100dp" android:height="50dp"/>
            <corners android:radius="3dp"/>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="17dp" android:color="@android:color/transparent"/>
           <gradient android:startColor="@android:color/white"
               android:angle="180"
               android:centerColor="@android:color/holo_orange_light"
               android:endColor="@android:color/white"
               />
            <corners android:radius="3dp"/>
            <size android:width="100dp" android:height="50dp"/>

        </shape>

    </item>

</selector>